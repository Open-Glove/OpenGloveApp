<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="OpenGloveApp.Pages.DevicesPage"
    Title="Devices">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="ToolbarItemSave" Icon="ic_save" Text="Save" Order="Primary" Priority="0" Activated="Handle_Activated"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
         <StackLayout Orientation="Vertical">
            <Label x:Name="page_description" 
                   HorizontalOptions="Center"
                   FontSize="Medium"
                   TextColor="{DynamicResource color_text}"
                   Text="Select the paired Devices to use"/>
            
            <ListView x:Name="listViewBoundedDevices"
                  HasUnevenRows="true"
                  ItemTapped="Handle_ItemTapped"
                  ItemSelected="Handle_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding Address}"/>    
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
